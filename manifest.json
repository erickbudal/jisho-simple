{
  "name": "Jisho Minimal",
  "version": "0.1.0",
  "description": "Remove do site Jisho.org alguns elementos desnecess√°rios",
  "content_scripts": [{
    "js": ["content-script.js"],
    "matches": [
      "*://jisho.org/*"
    ]
  }],
  "browser_action": {
    "default_title": "Jisho Minimal"
  },
  "permissions": [
    "*://jisho.org/*",
    "tabs",
    "storage"
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "manifest_version": 2
}